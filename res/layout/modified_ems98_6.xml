<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ems_menu_screen_1"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >



     <TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="@android:color/black"
    android:text="Next Steps"
    android:gravity="center"
    android:layout_marginBottom="25dip"
    android:textSize="@dimen/title_size"
    android:shadowColor="@color/title_shadow"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="1"/>
    
    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingTop="20dip">
            
    <Button
    android:id="@+id/new_survey"
    android:text="Continue with new survey form"
    android:layout_width="150dip"
    android:layout_height="55dip"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginTop="10dip"
    android:onClick="HandleButton">
    </Button>
    <Button
    android:id="@+id/mm_button"
    android:text="Return to Main Menu"
    android:layout_width="150dip"
    android:layout_height="55dip"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginTop="10dip"
    android:onClick="HandleButton">
    </Button>
	


</LinearLayout>


</LinearLayout>